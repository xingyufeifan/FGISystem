<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f4f7"
    android:orientation="vertical" >

    <include
        android:id="@+id/attentioner_titlebar"
        layout="@layout/topbar" />

    <ListView
        android:id="@+id/macroList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00F4F4F4"
        android:cacheColorHint="#00000000"
        android:fastScrollEnabled="true"
        android:focusable="true"
        android:listSelector="@drawable/list_select" >
    </ListView>

    <LinearLayout
        android:id="@+id/macroLinear"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top2"
            android:text="返回" />

        <Button
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top2"
            android:text="主页" />

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top2"
            android:text="保存" />

        <Button
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/top2"
            android:text="上传" />
    </LinearLayout>

</LinearLayout>